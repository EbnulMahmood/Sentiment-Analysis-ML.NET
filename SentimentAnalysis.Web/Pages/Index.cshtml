@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h2>Live Sentiment</h2>

    <div>
        <p><textarea id="Message" cols="45" placeholder="Type any text like a short review" required="required"></textarea></p>
        <button style="margin: 10px;" type="button" id="btnSubmit">Show</button>
    </div>

    <div class="sentiment">
        <h4>Your sentiment is...</h4>
        <p>😡 😐 😍</p>

        <div class="marker">
            <div id="markerPosition" style="left: 45%;">
                <div>▲</div>
                <label id="markerValue">Neutral</label>
            </div>
        </div>
    </div>
</div>
